<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <!--  Header  Starts-->

            <!-- Logo Start-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:background="@color/primary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Add Post"
                app:titleTextColor="#FFF" />
            <!--  Header Ends -->

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:id="@+id/allField"
                android:layout_below="@id/toolbar">
                <!-- Full Name Label -->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:layout_marginTop="5dp"
                    android:text="@string/Category"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Category"
                    android:layout_marginTop="5dip" />

                <!-- Type -->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:layout_marginTop="5dp"
                    android:text="@string/Type"
                    android:id="@+id/typetext"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip" />

                <!-- Sub category -->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:layout_marginTop="5dp"
                    android:text="@string/SubCategory"
                    android:id="@+id/subCategorytext"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/subCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip" />


                <TextView
                    android:id="@+id/GenderTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="@string/Gender"
                    android:layout_marginTop="10dip"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/gender_group">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_marginTop="10dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male" />


                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_marginTop="10dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female" />

                    </RadioGroup>
                </RelativeLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_breed"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:hint="@string/Breed"
                        />
                </android.support.design.widget.TextInputLayout>


                <!--  Age -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_age"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:hint="@string/Age"
                         />
                </android.support.design.widget.TextInputLayout>

                <!-- Milk Record  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/milkval"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/MlkRec"
                        android:singleLine="true"
                        android:layout_marginTop="5dip" />
                </android.support.design.widget.TextInputLayout>


                <!-- Product Name  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_product_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:hint="@string/ProductName"
                         />
                </android.support.design.widget.TextInputLayout>


                <!-- Company Name  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_company_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:hint="@string/CompanyName"
                         />
                </android.support.design.widget.TextInputLayout>

                <!-- Weight  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_weight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:hint="@string/weight"
                         />
                </android.support.design.widget.TextInputLayout>

                <!-- Description  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:hint="@string/Description"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- City  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_city"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:hint="@string/City"
                        />
                </android.support.design.widget.TextInputLayout>


                <!-- District  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_district"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:hint="@string/District"
                         />
                </android.support.design.widget.TextInputLayout>


                <!-- Contact  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/reg_supplier_contact"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:hint="@string/SupplierContact"
                         />
                </android.support.design.widget.TextInputLayout>

                <!-- Price  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1">

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Price"
                        android:singleLine="true"
                        android:layout_marginTop="5dip" />
                </android.support.design.widget.TextInputLayout>


                <CheckBox
                    android:id="@+id/chk_is_negotiable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Negotiable" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_below="@id/price">

                    <ImageView
                        android:id="@+id/viewImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/camera" />
                </LinearLayout>


                <Button
                    android:id="@+id/btnAddPost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:layout_marginTop="10dip"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>